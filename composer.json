{
    "name": "bednic/tools",
    "description": "Personal library of tools for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Tomas Benedikt",
            "email": "tomas.benedikt@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Tools\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ],
        "psr-4": {
            "Tools\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "squizlabs/php_codesniffer": "^3.4"
    }
}
